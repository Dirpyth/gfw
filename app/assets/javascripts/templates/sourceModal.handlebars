{{!-- BACKDROP --}}
<div class="modal-backdrop"></div>
{{!-- WINDOW --}}
<div class="modal-window">
  <a href="#" class="modal-close">
    <svg><use xlink:href="#shape-close"></use></svg>
  </a>
  <div class="modal-wrapper scroll-dark {{#if learn_more_or_download_data}}has-footer{{/if}}">
    <div class="modal-content">
      <div class='modal-source'>

        <h2 class='modal-title'>{{{title}}}</h2>
        <h3 class="modal-subtitle">{{{subtitle}}}</h3>

        <div class="modal-table">
          <dl class='modal-row'>
            <dt>Function</dt>
            <dd>{{{function}}}</dd>
          </dl>
          <dl class='modal-row'>
            <dt>RESOLUTION / SCALE</dt>
            <dd>{{{resolution}}}</dd>
          </dl>
          <dl class='modal-row'>
            <dt>Geographic coverage</dt>
            <dd>{{{geographic_coverage}}}</dd>
          </dl>
          <dl class='modal-row'>
            <dt>Source data</dt>
            <dd>{{{source}}}</dd>
          </dl>
          <dl class='modal-row'>
            <dt>Frequency of updates</dt>
            <dd>{{{frequency_of_updates}}}</dd>
          </dl>
          <dl class='modal-row'>
            <dt>Date of content</dt>
            <dd>{{{date_of_content}}}</dd>
          </dl>
          <dl class='modal-row'>
            <dt>Cautions</dt>
            <dd>{{{cautions}}}</dd>
          </dl>
        </div>

        <div class="modal-overview">
          <h3>Overview</h3>
          {{{overview}}}
        </div>

        <div class="modal-credits">
          <h3>Citation:</h3>
          {{{citation}}}
        </div>
      </div>
    </div>
    {{#if learn_more_or_download_data}}
      <div class="modal-footer">
        <div class="m-btncontainer is-center">
          {{!-- <a href="{{link_to_odp}}" class="download-mobile-link">Learn more or download data</a> --}}
          <a href="{{learn_more_or_download_data}}" target="_blank" class="btn green uppercase download-mobile-link">Learn more or download data</a>
        </div>
      </div>
    {{/if}}
  </div>
</div>
