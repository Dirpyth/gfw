<div class="layers-nav">
  <ul class="layers-list">
    {{#each layers}}
      <li class="layer" data-layer="{{this.slug}}" data-layeriso="{{this.iso}}">
        <span class="onoffswitch"><span></span></span>
        <span class="layer-title">{{this.title}}<a href="#" data-source="{{this.slug}}" class="source"></a></span>
      </li>
    {{/each}}
  </ul>
</div>
