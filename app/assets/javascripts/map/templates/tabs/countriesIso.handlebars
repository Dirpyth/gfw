{{#if layers}}
<header>
  <div class="alone">
    <p>Available data sets for this country:</p>
  </div>
</header>
<ul class="layers">
  {{#each layers}}
  <li data-slug="{{this.slug}}"><span class="layer-name"><i class="circle" style="color:{{this.category_color}}"></i>{{this.title}}</span></li>
  {{/each}}
</ul>
{{else}}
<header>
  <div class="alone">
    <p>No country data sets available yet. </p>
    <p><a href="#" class="source" data-source="view_existing_global_data">View existing global data</a> sets or <a href="/getinvolved/share-data" target="_blank">suggest your own.</a></p>
  </div>
</header>
{{/if}}
