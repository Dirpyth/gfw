{{!-- BACKDROP --}}
<div class="modal-backdrop"></div>
{{!-- WINDOW --}}
<div class="modal-window">
  <a href="#" class="modal-close">
    <svg><use xlink:href="#shape-close"></use></svg>
  </a>
  <div class="modal-wrapper scroll-dark {{#if footer}}has-footer{{/if}}">
    <div class="modal-content">
      <div class="modal-subscribe">
        <div class="steps current">
          <header>
            <h2>You need to be logged in to save your subscriptions</h2>
            <h3>
              Log in is required so you can return to Global Forest Watch
              to view, manage, and delete your subscriptions.
              Questions? <a class="contact-link" href="mailto:gfw@wri.org">Contact us</a>.
            </h3>
          </header>

          <ul class="subscription-authentication">
            <li>
              <a href="{{this.apiHost}}/auth/twitter" class="-twitter">
                <svg class="icon"><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-twitter"></use></svg>
                Log in with Twitter
              </a>
            </li>

            <li>
              <a href="{{this.apiHost}}/auth/facebook" class="-facebook">
                <svg class="icon"><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-facebook"></use></svg>
                Log in with Facebook
              </a>
            </li>

            <li>
              <a href="{{this.apiHost}}/auth/google" class="-google">
                <svg class="icon"><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-googleplus"></use></svg>
                Log in with Google
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    {{#if footer}}
      <div class="modal-footer">
        <div class="m-btncontainer is-center">
          {{#if download_data}}
            <a href="{{download_data}}" target="_blank" class="btn little green uppercase download-mobile-link">Download data</a>
          {{/if}}
          {{#if open_in_arcgis}}
            <a href="{{open_in_arcgis}}" target="_blank" class="btn little green uppercase download-mobile-link">Open in ArcGIS</a>
          {{/if}}
          {{#if open_in_carto}}
            <a href="{{open_in_carto}}" target="_blank" class="btn little green uppercase download-mobile-link">Open in Cartodb</a>
          {{/if}}
        </div>
      </div>
    {{/if}}
  </div>
</div>

