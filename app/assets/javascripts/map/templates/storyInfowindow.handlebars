<div class="story-popup">
  <a href="#close" class="close"><svg><use xlink:href="#shape-close"></use></svg></a>
  <div class="story-popup-content">
    <a href="{{#if link}}{{link}}{{else}}/stories/{{id}}{{/if}}" target='_blank'>
      {{#if image}}
        <img src="{{image}}" style="width:195px;margin-top:20px;">
      {{/if}}
      <h3>{{title}} {{!-- {{#if autor}}<span>by {{autor}} &middot;</span>{{/if}} --}}</h3>
      <p>read more</p>
    </a>
  </div>
</div>
