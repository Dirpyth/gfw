<span class="close"><svg><use xlink:href="#shape-arrow-down"></use></svg></span>

{{!-- RESULTS --}}
<ul class="analysis-stats">
  {{#if totalArea}}
    <li>
      <span class="stats-title">Total selected area</span>
      <span class="stats-count"><strong>{{totalArea}}</strong> ha</span>
    </li>
  {{/if}}

  
  {{!-- LOSS --}}
  {{#ifCond slug "===" 'umd-loss-gain'}}
    {{#if baselayers.loss}}
      <li>
        <span class="stats-title">Loss <a href="#" class="source" data-source="how_to_adjust_date">{{dates.lossDateRange}}</a><span class="stats-threshold" title="Click the gear icon located on the map to change the tree cover canopy density">with >{{options.threshold}}% <a href="#" class="canopy-button">canopy density</a></span></span>
        <span class="stats-count" style="color: {{baselayers.loss.category_color}};"><strong>{{alerts.totalAlerts}}</strong> ha</span>
      </li>
    {{/if}}

    {{#if baselayers.forestgain}}
      <li>
        <span class="stats-title">Gain 2001-2012</span>
        <span class="stats-count" style="color: {{baselayers.forestgain.title_color}};"><strong>{{alerts.gainAlerts}}</strong> ha</span>
      </li>
    {{/if}}

    {{#if baselayers.forest2000}}    
    <li>
      <span class="stats-title">Tree cover (2000)<span class="stats-threshold" title="Click the gear icon located on the map to change the tree cover canopy density">with >{{options.threshold}}% <a href="#" class="canopy-button">canopy density</a></span></span>
      <span class="stats-count" style="color: {{baselayers.forest2000.title_color}};"><strong>{{alerts.treeExtent}}</strong> ha</span>
    </li>
    {{/if}}

    <li>
      <a href="#" class="advanced-analysis-button">View Advanced Analysis</a>
    </li>

    <li>
      <div class="stats-notice">This algorithm approximates the results by sampling the selected area. Results are more accurate at closer zoom levels.</div>
    </li>

    <li>
      <div class="stats-notice">NOTE: tree cover loss and gain statistics cannot be compared against each other. <a href="#" class="source" data-source="loss-compare-gain">Learn more</a>.</div>
    </li>
  {{/ifCond}}   

  {{!-- PRODES --}}
  {{#ifCond slug "===" 'prodes-loss'}}
    <li>
      <span class="stats-title">Prodes tree cover loss ({{dates.dateRange}})</span>
      <span class="stats-count" style="color: {{baselayers.prodes.title_color}};"><strong>{{alerts.totalAlerts}}</strong> ha</span>
    </li>
  {{/ifCond}}

  {{!-- IMAZON --}}
  {{#ifCond slug "===" 'imazon-alerts'}}
    <li>
      <span class="stats-title">Deforestation alerts ({{dates.dateRange}})</span>
      <span class="stats-count" style="color: {{baselayers.imazon.title_color}};"><strong>{{alerts.deforAlerts}}</strong> ha</span>
    </li>
    <li>
      <span class="stats-title">Degradation alerts</span>
      <span class="stats-count" style="color: {{baselayers.imazon.category_color}};"><strong>{{alerts.degradAlerts}}</strong> ha</span>
    </li>
  {{/ifCond}}   



 
  {{!-- GUYRA --}}
  {{#ifCond slug "===" 'guyra-loss'}}
    <li>
      <span class="stats-title">Grand Chaco tree cover loss:</span>
      <span class="stats-count" style="color: {{baselayers.guyra.category_color}};"><strong>{{alerts.totalAlerts}}</strong> ha</span>
    </li>
  {{/ifCond}}   


  {{!-- GLAD --}}
  {{#ifCond slug "===" 'glad-alerts'}}
    <li>
      <span class="stats-title">GLAD Tree Cover Loss Alerts:</span>
      <span class="stats-count" style="color: {{baselayers.umd_as_it_happens.category_color}};"><strong>{{alerts.totalAlerts}}</strong></span>
    </li>
  {{/ifCond}}   


  {{!-- GLAD PERU --}}
  {{#ifCond slug "===" 'umd_as_it_happens_per'}}
    <li>
      <span class="stats-title">GLAD Tree Cover Loss Alerts:</span>
      <span class="stats-count" style="color: {{baselayers.umd_as_it_happens_per.category_color}};"><strong>{{alerts.totalAlerts}}</strong></span>
    </li>
  {{/ifCond}}   


  {{!-- GLAD CONGO --}}
  {{#ifCond slug "===" 'umd_as_it_happens_cog'}}
    <li>
      <span class="stats-title">GLAD Tree Cover Loss Alerts:</span>
      <span class="stats-count" style="color: {{baselayers.umd_as_it_happens_cog.category_color}};"><strong>{{alerts.totalAlerts}}</strong></span>
    </li>
  {{/ifCond}}   


  {{!-- GLAD INDONESIA --}}
  {{#ifCond slug "===" 'umd_as_it_happens_idn'}}
    <li>
      <span class="stats-title">GLAD Tree Cover Loss Alerts:</span>
      <span class="stats-count" style="color: {{baselayers.umd_as_it_happens_idn.category_color}};"><strong>{{alerts.totalAlerts}}</strong></span>
    </li>
  {{/ifCond}}   


  {{!-- FORMA --}}
  {{#ifCond slug "===" 'forma-alerts'}}
    <li>
      <span class="stats-title">Total alerts ({{dates.dateRange}})</span>
      <span class="stats-count" style="color: {{baselayers.forma.category_color}};"><strong>{{alerts.totalAlerts}}</strong> {{alertsName}}</span>
    </li>
  {{/ifCond}}


  {{!-- MODIS --}}
  {{#ifCond slug "===" 'quicc-alerts'}}
    <li>
      <span class="stats-title">Total alerts ({{dates.dateRange}})</span>
      <span class="stats-count" style="color: {{baselayers.modis.category_color}};"><strong>{{alerts.totalAlerts}}</strong> {{alertsName}}</span>
    </li>
  {{/ifCond}}


  {{!-- FIRES --}}
  {{#ifCond slug "===" 'viirs-active-fires'}}
    <li>
      <span class="stats-title">Total alerts ({{dates.dateRange}})</span>
      <span class="stats-count" style="color: {{baselayers.viirs_fires_alerts.category_color}};"><strong>{{alerts.totalAlerts}}</strong> {{alertsName}}</span>
    </li>
  {{/ifCond}}


  {{!-- TERRAi --}}
  {{#ifCond slug "===" 'terrai-alerts'}}
    <li>
      <span class="stats-title">Total alerts ({{dates.dateRange}})</span>
      <span class="stats-count" style="color: {{baselayers.terrailoss.category_color}};"><strong>{{alerts.totalAlerts}}</strong> {{alertsName}}</span>
    </li>
  {{/ifCond}}
</ul>


{{!-- FOOTER --}}
<footer class="analysis-footer">
  <button id="analysis-subscribe" class="btn green uppercase analysis-subscribe">Subscribe</button>

  <ul>
    <li>
      {{#ifCond slug "===" 'umd-loss-gain'}}
        <a class="analysis-footer-btn download-mobile-link" data-type="forest-change" href="http://earthenginepartners.appspot.com/science-2013-global-forest" target="_blank">
          <svg class="icon"><use xlink:href="#icon-analysis-download"></use></svg>
          <span>Download data</span>
        </a>
        {{else}}
        <button class="analysis-footer-btn js-dropdown-btn">
          <div>
            <svg class="icon"><use xlink:href="#icon-analysis-download"></use></svg>
            <svg class="icon -inactive"><use xlink:href="#shape-close"></use></svg>
          </div>
          <span>Download data</span>            
          <ul class="analysis-footer-dropdown js-dropdown">
            <li><span>By downloading data you agree to the <a href="/terms">GFW Terms of Service</a></span></li>
            <li><a class="download-mobile-link" data-type="forest-change" href="{{options.svg}}" target="_blank">SVG</a></li>
            <li><a class="download-mobile-link" data-type="forest-change" href="{{options.geojson}}" target="_blank">GeoJSON</a></li>
            <li><a class="download-mobile-link" data-type="forest-change" href="{{options.shp}}" target="_blank">SHP</a></li>
            <li><a class="download-mobile-link" data-type="forest-change" href="{{options.kml}}" target="_blank">KML</a></li>
            <li><a class="download-mobile-link" data-type="forest-change" href="{{options.csv}}" target="_blank">CSV</a></li>
            <li><a class="download-mobile-link" data-type="forest-change" href="http://oneclick.cartodb.com/?file={{options.cdb}}&provider=gfw'" target="_blank">Open in Carto DB</a></li>
          </ul>          
        </button>          
      {{/ifCond}}
    </li>

    <li id="analysis-delete">
      <button class="analysis-footer-btn">
        <svg class="icon"><use xlink:href="#icon-analysis-remove"></use></svg>
        <span>Discard analysis</span>
      </button>
    </li>
  </ul>
</footer>
