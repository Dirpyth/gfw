          <article id="crowdsourced-stories" class="source-article">
            <header>
              <h2>Crowdsourced stories</h2>
              <h3>This stories are submitted by GFW users to report what is happening in forest in the ground</h3>
              <%= link_to 'Submit your story', new_story_path, :class => "btn green medium uppercase"%>
            </header>
            <div class="content">
              <div class="stories-box">
                <ul>
                  <% @visible.each do |story| %>
                    <li>
                      <a href="<%= story_path(story['id']) %>">
                        <figure><div class="bg" style="background-image: url(<%= story_image_or_map(story['media'], "#{story['lat']}, #{story['lng']}") %>)"></div></figure>
                        <article class="info">
                          <h4><%= story['title'] %></h4>
                          <p><%= truncate(story['details'], :length => 295) %></p>
                          <button class="btn gray medium">More</button>
                        </article>        
                      </a>
                    </li>                   
                  <% end %>
                </ul>
                <div class="section-footer">
                  <% if @page  > 1 %>
                    <%= link_to previous_page_keep(@page), :class => "previous_stories" do %>
                      <span class="text">
                        <span class="icon"></span>
                        Previous Stories
                      </span>
                    <% end %>
                  <% end %>
                  <% unless last_page? %>
                    <%= link_to next_page_keep(@page), :class => "next_stories" do %>  
                      <span class="text">
                        Next Stories
                        <span class="icon"></span>
                      </span>
                    <% end %>
                  <% end %>

                </div>
              </div>
            </div>
          </article>
