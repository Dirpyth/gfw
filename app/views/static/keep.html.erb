<section class="header-static">
    <div class="inner">
      <header>
        <h2><%= @title %></h2>
        <h3>Global Forest Watch is a rapidly evolving platform that provides the most up-to-date information available on forests. Use this page to stay updated on changes to the GFW platform and on what is happening in forests around the world.</h3>
      </header>
      <ul class="row row3">
        <li><a href="/howto/analyze-and-monitor-data" class="btn white uppercase">Monitor an area of interest</a></li>
        <li><a href="http://wp-wri-staging.herokuapp.com/" class="btn white uppercase">Read the Blog</a></li>
        <li><a href="http://www.wri.org/global-forest-watch-stay-informed" class="btn white uppercase">Sign up for newsletter</a></li>
      </ul>
    </div>
</section>

<section id="sidebarNavView" class="content-static">
  <a id="back-btn" class="back-btn mobile-show" href="#"><svg><use xlink:href="#shape-fast-forward-left"></use></svg>Back</a>
  <div class="inner">
    <div class="row">
      <aside id="sidebarAside">
        <ul>
          <li>
            <a href="#" class="nav-title">
              <svg><use xlink:href="#shape-fast-forward-up"></use></svg>
              <%= @title %>
            </a>
          </li>
          <li><%= link_to 'Crowdsourced stories', "#{keepupdated_path}/crowdsourced-stories", :"data-slug" => 'crowdsourced-stories', :"data-interesting" => 'stories_on_the_map, mongabay_stories, ejn_stories', :class => 'nav-item crowdsourced-stories' %><svg class="ico"><use xlink:href="#shape-arrow-right"></use></svg></li>
          <li><%= link_to 'Publications', "#{keepupdated_path}/publications", :"data-slug" => 'publications', :"data-interesting" => 'explore_the_map, download_the_data, discussion_forum', :class => 'nav-item publications' %><svg class="ico"><use xlink:href="#shape-arrow-right"></use></svg></li>
        </ul>
      </aside>
      <div id="sources-box" class="sources-box">
        <div class="sources-content">
          <div id="sources-spinner" class="spinner start"><svg><use xlink:href="#shape-spinner"></use></svg></div>
          <article id="crowdsourced-stories" class="source-article">
            <header>
              <h2>Crowdsourced stories</h2>
              <h3>Crowdsourced stories are submitted by GFW users to report what is happening in forests on the ground</h3>
              <%= link_to 'Submit your story', new_story_path, :class => "btn green medium uppercase"%>
            </header>
            <div class="content">
              <div id="storiesKeepView" class="stories-box">
                <ul>
                  <% @visible.each do |story| %>
                    <li>
                      <a href="<%= story_path(story['id']) %>">
                        <figure><div class="bg" style="background-image: url(<%= story_image_or_map(story['media'], "#{story['lat']}, #{story['lng']}") %>)"></div></figure>
                        <article class="info">
                          <h4><%= story['title'] %></h4>
                          <p><%= truncate(story['details'], :length => 295) %></p>
                          <button class="btn gray medium">More</button>
                        </article>
                      </a>
                    </li>
                  <% end %>
                </ul>
                <div class="section-footer">
                  <div id="pagination-container" data-page="<%= @page %>" data-perpage="<%= @stories_per_page %>" data-total="<%= @total_stories %>"></div>
                </div>
              </div>
            </div>
          </article>
          <article id="publications" class="source-article">
            <header>
              <h2>Publications</h2>
              <h3>Use this page to view and download relevant publications pertaining to GFW data.</h3>
            </header>
            <div class="content">
              <ul class="publications-list">
                <li>
                  <h3>Publications for GFW data sets</h3>
                </li>
                <li>
                  <h3>Publications using GFW data sets</h3>
                  <p>Coming soon!</p>
                </li>
                <li>
                  <h3>Other relevant publications</h3>
                  <p>Coming soon!</p>
                </li>
              </ul>
            </div>
          </article>
          <article id="newsletter" class="source-article">
            <header>
              <h2>Sign up for Newsletter</h2>
              <h3>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
              tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
              quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo.</h3>
              <%= link_to 'Subscribe', 'http://www.wri.org/global-forest-watch-stay-informed', :class => "btn green medium uppercase", :target => '_blank'%>
            </header>
          </article>
          <article id="coming-soon" class="source-article">
            <header>
              <h2>Coming Soon</h2>
              <h3>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
              tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
              quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo.</h3>
            </header>
          </article>
        </div>
      </div>
    </div>
  </div>
</section>
<div id="cut" style="height:1px;"></div>
<section id="interestingView" class="interesting-section"></section>
