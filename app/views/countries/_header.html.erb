<div class="country-header">
  <div class="inner">

    <!--  colored header -->
    <div class="country-header-inner">
      <div class="country-title">
        <h1><%= @country['name'] %></h1>
        <span class="country-icons-settings_engine"></span>
        <div class="country-selector">
          <select id="areaSelector">
            <option>Select area</option>
          </select>
          <div class="selector-remove">âœ•</div>
          <div class="selector-arrow"></div>
        </div>
      </div>

      <div class="country-details">
        <div class="country-preview">
          <div class="map" id="countryMap"></div>
          <div class="tree-numbers">
            <div class="tree-cover">
              <h4>Tree cover</h4>
                <span class="amount"><%= extent_to_human(@country['extent'], format: '%n') %></span>
                <span class="unit"><%= extent_to_human(@country['extent'], format: '%u', shortUnit: true) %></span>
            </div>
            <div class="total-area">
              <h4>Percent Tree Cover</h4>
              <span class="amount">30</span>
              <span class="unit">%</span> 
            </div>
          </div>
          <div class="loss-gain-graph ghost">
            <h4>LOSS AND GAIN (2001 - 2012)</h4>
            <div class='graph' id="lossGainGraph"></div>
            <div class='graph-amount'></div>
            <div class='graph-date'></div>
            <div class='coming-soon'><span>Not yet available for this country</span></div>
          </div>
        </div>        
        <div class="country-sidenav">
          <ul>
            <li>
              <a href="#" data-source="umd_tree_loss_gain" class="info">
                Info
                <span class="sidenav-icon country-icons-info_grey"></span>
              </a>
            </li>
            <li>
              <a href='http://www.earthenginepartners.appspot.com/science-2013-global-forest/download.html' target='_blank'>
                Download data
                <span class="sidenav-icon country-icons-download_grey"></span>
              </a>
            </li>
            <li>
              <a href='<%= map_coords %>/grayscale/loss/596' class='action' title='Analyze forest change' target="<%= controller_name === 'embed' ? '_blank' : '' %>">
                Analyze
                <span class="sidenav-icon country-icons-chart_grey"></span>
              </a>
            </li>
            <li>
              <a href="#" title="Settings" class="umd_options_control" data-tip="Change UMD layer intensity">
                Treshold
                <span class="sidenav-icon country-icons-settings_engine"></span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>

  </div>
</div>