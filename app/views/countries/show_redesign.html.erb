<% content_for :js do %>
  <script>
    $(function() {
      cdb.init(function() {
        window.countries_show = new gfw.ui.view.CountriesShow({
          iso: "<%= @country['iso'] %>"
        });
      });
    });
  </script>
<% end %>

<div class="country-show">
  <div class="country-header">
    <div class="inner">
    
      <!--  colored header -->
      <div class="country-header-inner">
        <div class="country-title">
          <h1><%= @country['name'] %></h1>
          <div class="country-selector">
            <select>
              <%= options_for_select(@countries.map{|c| [c['name'], c['iso']]}) %>
            </select>
          </div>
        </div>

        <div class="country-details">
          <div class="country-preview">
            <div class="map"></div>
            <div class="tree-numbers">
              <div class="tree-cover">
                <h4>Tree cover</h4>
                <!-- todo: generate this number propertly -->
                <span class="amount"><%= number_to_human(@country['extent'])[0,3] %></span>
                <span class="unit">mha</span> 
              </div>
              <div class="total-extension">
                <h4>Total extension</h4>
                <span class="amount">851</span>
                <span class="unit">mha</span> 
              </div>
            </div>
            <div class="loss-gain-graph">
              <h4>LOSS AND GAIN (2001 - 2012)</h4>
              <div class='graph-amount'></div>
              <div class='graph-date'></div>
              <div class='frame'><div class='frame_bkg'></div></div>
            </div>
          </div>        
          <div class="country-sidenav">
            <ul>
              <li>
                <a href="#">Info</a>
                <span class="country-icons-info_reverse"></span>
              </li>
              <li><a href="#">Download data</a></li>
              <li><a href="#">Analyze</a></li>
            </ul>
          </div>
        </div>
      </div>

      <!--  indepth message -->
      <% if !@country['indepth'].present? %>
      <div class="country-indepth">
        <h3 class="country-indepth__title">Global Forest Watch does in-depth work in this country.</h3>
        <p class="country-indepth__body">Find more information at the Atlas Foreiester Interactif de la RÃ©publique Democratique Du Congo</p>
        <div class="country-indepth__links">
          <a href="">Interactive Map</a> |  
          <a href="">Report</a>
        </div>
      </div>
      <% end %>

      <!--  country nav -->
      <div class="country-nav-container">
        <div class="country-nav">
          <ul>
            <li><a href="#" data-scroll-nav='0'>Forma<br>clearing alerts</a></li>
            <li><a href="#" data-scroll-nav='1'>Forest<br>type</a></li>
            <li><a href="#" data-scroll-nav='2'>State of the forest</a></li>
            <li><a href="#" data-scroll-nav='3'>People<br>& Economy</a></li>
            <li><a href="#" data-scroll-nav='4'>Tenure<br>& Laws</a></li>
            <li><a href="#" data-scroll-nav='4'>Climate Change</a></li>
            <li><a href="#" data-scroll-nav='6'>International agreements</a></li>
          </ul>
        </div>
      </div>

    </div>
  </div>

  <!-- forma alerts -->
  <section class="country-section country-alerts" data-scroll-index='0'>
    <div class="inner">
      <div class="section-info">
        <a href="#" class="info" data-source=""><i></i></a>
        FORMA alerts
      </div>

      <div class="section-content">
        <div class="left-col">
          <h3 class="section-title">There were <span class="highlight">7,363</span> FORMA alerts in <span class="highlight">october</span></h3>

          <div class="forma-alerts-legend">
            <span class="legend-title">Forest Clearing Alerts</span>
            <span>Humid Tropics</span>
          </div>

          <a href="#" class="btn">Download data</a>
        </div>
        <div class="right-col">
          <div class="forma-graph"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- forest type -->
  <section class="country-section country-forests-type" data-scroll-index='1'>
    <div class="inner">
      <div class="section-info">
        <a href="#" class="info" data-source=""><i></i></a>
        Type of forests in <%= @country['name'] %>
      </div>

      <div class="section-content">
        <div class="left-col">
          <h3 class="section-title">
            <%= @country['name'] %> has <span class="highlight"><%= number_to_human(@country['extent'], precision: 2).downcase %></span> hectares of tree cover
          </h3>

          <div class="forest-type-legends">
            <span class="legends-title">Forest Type:</span>
            <ul class="legends-list">
              <li><span class="regenerated"></span>Regenerated</li>
              <li><span class="primary"></span>Primary</li>
              <li><span class="planted"></span>Planted</li>
            </ul>
          </div>
        </div>
        <div class="right-col">
          <div class="forests-type-graph"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- forest produnction -->
  <section class="country-section country-production" data-scroll-index='2'>
    <div class="inner">
      <div class="section-info">
        <a href="#" class="info" data-source=""><i></i></a>
        Gross production value for forests
      </div>

      <div class="section-content">
        <h3 class="section-title">
          The forestry sector contributed <span class="highlight">USD <%= gva_to_human(@country['gva'])%></span> to the economy in 2006, which is appoximately <span class="highlight"><%= @country['gva_percent'] %> of the GDP.</span>
        </h3>
      </div>
    </div>
  </section>

  <!-- employment -->
  <% if @employees.present? && @employees > 0 %>
  <section class="country-section country-employment" data-scroll-index='3'>
    <div class="inner">
      <div class="section-info">
        <a href="#" class="info" data-source=""><i></i></a>
        Employment in forest sector
      </div>

      <div class="section-content">
        <div class="left-col">
          <% if @employees < 1000 %>
            <h3 class='section-title'><div><%= @employees %></div> <span>thousand people are directly employed by the forestry sector, according to 2006 FAO data.</span></h3>
          <% else %>
            <h3 class='section-title'><div><%= (@employees/1000.00).round(2) %></div> <span>million people are directly employed by the forestry sector, according to 2006 FAO data.</span></h3>
          <% end %>

          <ul class='employment <%= @employees < 25 ? 'short' : '' %>'>
            <li>
              <% @employees = @employees < 100 ? @employees : 100 %>
              <div class='man-list'>
                <% @employees.times do |i| %>
                  <%= image_tag 'countries/man.png' %>
                <% end %>

                <%= '...' if @employees == 100 %>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>
  <% end %>

  <!-- tenure -->
  <section class="country-section country-tenure" data-scroll-index='4'>
    <div class="inner">
      <div class="section-info">
        <a href="#" class="info" data-source=""><i></i></a>
        Forest tenure
      </div>

      <div class="section-content">
        <div class='line-graph'></div>
      </div>
    </div>
  </section>

  <!-- legislation -->
  <section class="country-section country-legislation" data-scroll-index='5'>
    <div class="inner">
      <div class="section-info">
        <a href="#" class="info" data-source=""><i></i></a>
        Forest policy and legislation
      </div>

      <div class="section-content">
        <a href='mailto:gfw@wri.org' class='people-link'>Are we missing a link?</a>
      </div>
    </div>
  </section>

  <!-- carbon stocks -->
  <section class="country-section country-tenure" data-scroll-index='6'>
    <div class="inner">
      <div class="section-info">
        <a href="#" class="info" data-source=""><i></i></a>
        Forest policy and legislation
      </div>

      <div class="section-content">
        <div class="left-col">
          <h3 class='section-title'>This country has <span><%= number_with_delimiter(@country['carbon_stocks']) %> million<br />metric tons of carbon stocks</span> in living forest biomass.</h3>
        </div>
        <div class="right-col right-col-inverse">
          
        </div>
      </div>
    </div>
  </section>

  <!-- conventions -->
  <section class='country-section country-conventions' data-scroll-index='4'>
    <div class='inner'>
      <div class="section-info">
        <a href="#" class="info" data-source=""><i></i></a>
        Conventions
      </div>

      <div class="section-content">
        <ul>
          <% @conventions.each do |convention| %>
            <% if @country["convention_#{convention}"].present? %>
              <li class='<%= convention %>'><%= t('.conventions.'+convention+'_title_html') %>
                <span><%= @country["convention_#{convention}"] %></span>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </section>

  <!-- useful links -->
  <% if @country['ministry_link'].present? || @country['external_links'].present? %>
  <section class='country-section country-external-links'>
    <div class='inner'>
      <div class="section-info">
        Useful links
      </div>

      <div class="section-content">
        <ul>
          <% if @country['ministry_link'].present? %>
            <li><a href='<%= @country['ministry_link'] %>' target='_blank'><%= t('.ministry_link') %></a></li>
          <% end %>

          <% if @country['external_links'].present? %>
            <% JSON.parse(@country['external_links']).each do |link| %>
              <li><%= link_to link['title'], link['url'], :target => '_blank' %></li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </section>
  <% end %>

  <!-- download links -->
  <section class='country-section country-download-links'>
    <div class='inner'>
      <div class="section-content">
        <ul>
          <li><a href='<%= "#{map_coords}/grayscale/forma?subscribe=true" %>'>Subscribe to alerts for this country</a></li>
          <% if @country['dataset_link'].present? %>
            <li><%= link_to 'Download relevant data sets', @country['dataset_link'] %></li>
          <% else %>
            <li><span>No data sets for this country</span></li>
          <% end %>
        </ul>
      </div>
    </div>
  </section>

  <!-- blog -->
  <section class='country-section country-section-inverse country-blog'>
    <div class='inner'>
      <h2 class='section-title'><%= t('.country_blog.title', :country => @country['name'].titleize) %></h2>

      <ul class='columns'>
        <li class='column three first'>
          <% unless @blog_story.nil? %>
            <strong class='column-title'>Blog stories</strong>
            <h3 class='story-title'><%= truncate(@blog_story['title'], :length => 35) %></h3>
            <p class='story-content'><%= truncate(@blog_story['description'].gsub('[&#8230;]', ''), :length => 300) %> <%= link_to('more', @blog_story['link'], :target => '_blank') %></p>
            <p>Read more blog stories <a href='<%= "http://blog.globalforestwatch.org/?tag=#{@country['name'].downcase.gsub(' ', '_')}" %>'>here</a></p>
          <% end %>
        </li>

        <li class='column three round <%= @country['story'].present? ? '' : 'no_story' %>'>
          <strong class='column-title'>User stories</strong>
          <% if @country['story'].present? %>
            <a href="<%= story_path(@country['story']['cartodb_id']) %>">
              <img src="<%= story_image_or_map(@country['story']['media'], "#{@country['story']['lat']}, #{@country['story']['lng']}") %>" alt="<%= @country['story']['title'] %>" />
              <div class="frame"></div>
              <div class='gradient'></div>
              <div class='frame'></div>
              <div class='title'>
                <strong><%= @country['story']['title'] %></strong>
                <span><%= t('.home_stories.featured.read_more') %></span>
              </div>
            </a>
          <% else %>
            <a href='<%= new_story_path %>' class='nostory'>
              <div class='gradient'></div>
              <div class='frame'></div>
              <div class='title'>
                <strong>No stories for this country yet.</strong>
                <span>Add one</span>
              </div>
            </a>
          <% end %>
          <p>See more on the <%= link_to 'map', "#{map_path}/3/15.00/27.00/ALL/580", :class => 'inline' %></p>
        </li>

        <li class='column three last'>
          <% if @mongabay_story.present? %>
            <strong class='column-title'>Mongabay stories</strong>
            <h3 class='story-title'><%= truncate(@mongabay_story['title'], :length => 35) %></h3>
            <p class='story-content'><%= truncate(@mongabay_story['description'], :length => 300) %> <%= link_to('more', @mongabay_story['loc'], :target => '_blank') %></p>
            <p>See more on the <%= link_to 'map', "#{map_path}/3/15.00/27.00/ALL/586" %></p>
          <% end %>
        </li>
      </ul>
    </div>
  </section>

  <!-- disqus -->
  <section class='country-section country-comments'>
    <div class='inner'>
      <div id='disqus_thread'></div>
      <script type='text/javascript'>
          /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
          var disqus_shortname = 'gfw20'; // required: replace example with your forum shortname

          /* * * DON'T EDIT BELOW THIS LINE * * */
          (function() {
              var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
              dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
              (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
          })();
      </script>
      <noscript>Please enable JavaScript to view the <a href='http://disqus.com/?ref_noscript'>comments powered by Disqus.</a></noscript>
    </div>
  </section>

  <div id='sources' class='sources notranslate'>
    <%= render 'shared/countries' %>
    <%= render 'shared/sources' %>
  </div>

</div>
